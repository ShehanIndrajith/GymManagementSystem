@{
}

@model GymManagementSystem.Models.Entities.Package

<h1>Edit Package</h1>

@if (Model is null)
{
    <p>No Package was found with this ID</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Type</label>
            <input type="text" class="form-control" asp-for="Type" />
        </div>

        <div class="mt-3">
            <label class="form-label">Duration (Days)</label>
            <input type="number" class="form-control" asp-for="Duration" />
        </div>

        <div class="mt-3">
            <label class="form-label">Fee (LKR)</label>
            <input type="text" class="form-control" asp-for="fee" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
}