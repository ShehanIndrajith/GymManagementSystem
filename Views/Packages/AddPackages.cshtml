@model GymManagementSystem.Models.AddPackageViewModel

<h1>Add Package</h1>
<form method="post" asp-action="AddPackages">
    <div class="mt-3">
        <label class="form-label">Type</label>
        <input type="text" class="form-control" asp-for="Type" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Duration</label>
        <input type="number" class="form-control" asp-for="Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Fee</label>
        <input type="text" class="form-control" asp-for="fee" />
        <span asp-validation-for="fee" class="text-danger"></span>
        
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>